<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jingle">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jingle">
        <activity android:name=".InsidePlaylistActivity"></activity>
        <activity
            android:name=".fragments.LibraryActivity"
            android:label="@string/title_activity_library"
            android:theme="@style/Theme.Jingle.NoActionBar" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.Jingle.NoActionBar" />
        <activity
            android:name=".song_viewer"
            android:launchMode="singleInstance"
            android:theme="@style/SplashScreenBackground" />
        <activity
            android:name=".splashScreen"
            android:theme="@style/SplashScreenBackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>